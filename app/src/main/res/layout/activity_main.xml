<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/lightest_orange"
    >



    <ImageButton
        android:id="@+id/main_BTN_apartment_profile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="150dp"
        android:src="@drawable/homebutton"
        android:background="@color/lightest_orange"
        android:scaleType="fitCenter"
        />

    <ImageButton
        android:id="@+id/main_BTN_person_profile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="150dp"
        android:src="@drawable/person"
        android:background="@color/lightest_orange"

        />

    <ImageButton
        android:id="@+id/main_BTN_favorite_renters_profiles"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="@dimen/default_margin"
        android:src="@drawable/heart"
        android:background="@color/lightest_orange"
        android:scaleType="fitCenter"

        />

    <ImageButton
        android:id="@+id/main_BTN_favorite_home_profiles"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="@dimen/default_margin"
        android:src="@drawable/heart"
        android:background="@color/lightest_orange"
        android:scaleType="fitCenter"

        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/main_TXT_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginBottom="220dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Home Profile" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/main_TXT_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginBottom="220dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Person Profile" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/main_TXT_renter_profiles_favorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginBottom="100dp"
        android:textStyle="bold"
        android:textSize="17sp"
        android:text="Favorite Renters Profile" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/main_TXT_home_profiles_favorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginBottom="100dp"
        android:textStyle="bold"
        android:textSize="17sp"
        android:text="Favorite Home Profile" />


</RelativeLayout>